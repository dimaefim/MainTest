@model SocialNetwork.Models.Models.RegistrationViewModel

@{
    Layout = "../Shared/_Layout.cshtml";
}

<div class="main-div">
    @using (Html.BeginForm("Registration", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        //Сообщение пользователю
        <p class="col-md-offset-5 col-md-7 message-error">@ViewBag.Message</p>

        //Секция логина
        <div class="form-group">
            @Html.LabelFor(model => model.Login, new { @class = "col-md-5 control-label" })

            <div class="col-md-7">
                @Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Login)
            </div>
        </div>

        //Секция пароля
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "col-md-5 control-label" })

            <div class="col-md-7">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>

        //Секция подтверждения пароля
        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-md-5 control-label" })

            <div class="col-md-7">
                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>

        //Секция Имени
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "col-md-5 control-label" })

            <div class="col-md-7">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        //Секция Фамилии
        <div class="form-group">
            @Html.LabelFor(model => model.Surname, new { @class = "col-md-5 control-label" })

            <div class="col-md-7">
                @Html.TextBoxFor(model => model.Surname, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Surname)
            </div>
        </div>

        //Секция Отчества
        <div class="form-group">
            @Html.LabelFor(model => model.Patronymic, new { @class = "col-md-5 control-label" })

            <div class="col-md-7">
                @Html.TextBoxFor(model => model.Patronymic, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Patronymic)
            </div>
        </div>

        //Секция даты рождения
        <div class="form-group">
            @Html.LabelFor(model => model.DateOfBirth, new { @class = "col-md-5 control-label" })

            <div class="col-md-7">
                @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DateOfBirth)
            </div>
        </div>

        //Секция электронной почты
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "col-md-5 control-label" })

            <div class="col-md-7">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        //Кнопка отправки формы
        <div class="form-group">
            <div class="col-md-offset-5 col-md-7">
                <input type="submit" class="btn btn-default col-md-10" value="Зарегистрироваться" />
            </div>
        </div>
    }

    <!--Ссылка назад-->
    <div class="col-md-offset-5 col-md-7">
        @Html.ActionLink("Назад", "Login", "Account")
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/bootstrap-datepicker.js"></script>

<script>
        $(document).ready(function() {
            $("#DateOfBirth").datepicker({
                format: "dd MM yyyy",
                autoclose: true,
                todayHightLight: true
            });
        });
</script>
