@using SocialNetwork.Models.Models
@model IEnumerable<MainPageViewModel>

@{
    Layout = "../Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <input name="nameFilter" placeholder="ФИО"/>
    <hr/>
    @foreach (MainPageViewModel item in Model)
    {
        <div class="col-md-12 row">
            <div class="col-md-3">
                @Html.Raw("<img class=\"user-photo img-responsive\" src=\"data:image/*;base64,"
                          + Convert.ToBase64String(item.MainPhoto) + "\" />")
            </div>

            <div class="col-md-9">
                @Html.ActionLink(item.Surname + " " + item.Name, "Index", "Home")<br/>
                <button type="button" class="btn btn-default">Дружить</button>
            </div>
        </div>
        <hr/>
    }
</div>


